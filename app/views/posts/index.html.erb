<h1>Here is a list of posts by a user</h1>
 <div class="container">

        <div class="user_card">
            <div class="img">
                <%= image_tag("https://robohash.org/#{@user.id}.png", :alt => "#{@user.name}'s profile photo") %>  
            </div>
            <div class="user_info">
                <h1 class="username"><%= @user.name %></h1>
                <h4 class="number_of_post">Number of posts: <%= @user.posts_counter %></h4>
            </div>
        </div>
        <% @user.most_recent_posts.each do |post| %>
        <%= link_to user_post_path(@user.id, post.id), {:class => "link-class"} do%>
            <ul>
            <div class="post_with_5_comments">
                <div class="posts">
                <h3>Posts<%= post.title %></h3>
                <p><%= post.text %></p>
                <p class="comments_likes">Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
            </div>

             <%= form_with url: "/users/#{@user.id}/posts/#{post.id}/likes", class: 'comments_counter' do |like| %>
               <%= like.submit "Like Post", class: "button like_button"%>
              <% end %>
            </ul>

            <div class="comments">
            <% post.most_recent_comments.each do |comment| %>
                <p><%= comment.author.name %>: <%= comment.text %></p>
            </div>
            <% end %>
            </div>
            </div> 
            <% end %>
            <% end %> 

        <button>See all posts</button>
    
    </div>